/*
 * 弹窗样式
 */
//弹窗宽度
//// 小+s
.dialog-width-sm-s
  .el-dialog
    width 480px
//// 小
.dialog-width-sm
  .el-dialog
    width 520px
//// 中
.dialog-width
  .el-dialog
    width 640px
//// 大
.dialog-width-lg
  .el-dialog
    width 780px
//// 大+x
.dialog-width-lg-x
  .el-dialog
    width 920px
//// 大+xx
.dialog-width-lg-xx
  .el-dialog
    width 1060px
/*Element UI 弹窗样式变更*/
.ui-dialog
  .dialog-title
    display flex
    align-items center
    svg
      width 18px
      height 18px
      color $color-a
      margin-right 10px
  .el-dialog__header
    display flex
    align-items center
    height 40px
    padding 0 20px
    background-color $color-09
    .el-dialog__title
      padding-left 28px
      font-size $fontsize-medium
    .el-dialog__headerbtn
      top 11px
  .el-dialog__footer
    padding-top 20px
    border-top 1px solid $color-06
    text-align right
    .el-button+.el-button
      margin-left 5px
/*End Element UI 弹窗样式变更*/

/*移动端适配*/
@media (max-width 780px)
  .dialog-width-lg
    .el-dialog
      width 95%
@media (max-width 920px)
  .dialog-width-lg-x
    .el-dialog
      width 95%
@media (max-width 1060px)
  .dialog-width-lg-xx
    .el-dialog
      width 95px
@media (max-width 768px)
  .el-dialog
    width 95%!important
/*End 移动端适配*/